{
  "name": "satoshi",
  "version": "0.0.3",
  "description": "Bitcoin core library for NodeJS and browsers",
  "main": "./index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dedupe": "./node_modules/.bin/force-dedupe-git-modules . && rm -rf dist/*",
    "build-umd": "./node_modules/.bin/browserify ./index.js -s bitcoin --o dist/satoshi.js && ./node_modules/.bin/uglifyjs ./dist/satoshi.js --output dist/satoshi-min.js --comments",
    "build": "npm run dedupe && npm run build-umd"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/coinative/satoshi.git"
  },
  "author": "Ion Drive Software Ltd.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/coinative/satoshi/issues"
  },
  "homepage": "https://github.com/coinative/satoshi",
  "devDependencies": {
    "browserify": "^4.1.8",
    "force-dedupe-git-modules": "^0.1.4",
    "uglify-js": "^2.4.13",
    "satoshi-address": "git://github.com/coinative/satoshi-address",
    "satoshi-base58": "git://github.com/coinative/satoshi-base58",
    "satoshi-hash": "git://github.com/coinative/satoshi-hash",
    "satoshi-hdkey": "git://github.com/coinative/satoshi-hdkey",
    "satoshi-key": "git://github.com/coinative/satoshi-key",
    "satoshi-mnemonic": "git://github.com/coinative/satoshi-mnemonic",
    "satoshi-mskey": "git://github.com/coinative/satoshi-mskey",
    "satoshi-script": "git://github.com/coinative/satoshi-script",
    "satoshi-sjcl": "git://github.com/coinative/satoshi-sjcl"
  }
}
